<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarCarritoServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.AgregarCarritoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CantidadIncDecServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.CantidadIncDecServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoverCarritoServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.RemoverCarritoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutCarritoServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.CheckoutCarritoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregarProductoServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.agregarProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <servlet-class>com.tierramedia.servlet.EliminarProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CantidadIncDecServlet</servlet-name>
        <url-pattern>/carrito-incdec</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login-usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/registro-usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarCarritoServlet</servlet-name>
        <url-pattern>/agregar-carrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/usuario-logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoverCarritoServlet</servlet-name>
        <url-pattern>/carrito-remover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutCarritoServlet</servlet-name>
        <url-pattern>/carrito-check-out</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregarProductoServlet</servlet-name>
        <url-pattern>/agregar-producto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <url-pattern>/eliminar-producto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
